<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:gravity="center_horizontal"
                                                   android:orientation="vertical"
                                                   tools:context="com.dacosys.warehouseCounter.ui.activities.orderRequest.NewCountActivity"
                                                   tools:layout_editor_absoluteX="0dp"
                                                   tools:layout_editor_absoluteY="81dp">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/top_appbar"
            style="@style/MyActionBar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:elevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:menu="@menu/menu_read_activity"
            app:title="@string/new_count"/>

    <EditText
            android:id="@+id/headerLabelEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:background="#f7f78a"
            android:cursorVisible="false"
            android:focusable="false"
            android:importantForAutofill="no"
            android:inputType="none"
            android:maxLines="100"
            android:scrollHorizontally="false"
            android:singleLine="false"
            android:text="@string/scan_or_write_a_description_or_location_of_the_count_and_select_a_client"
            android:textAlignment="center"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:clickable="false"
            tools:focusableInTouchMode="false" android:layout_marginTop="1dp"
            app:layout_constraintTop_toBottomOf="@+id/top_appbar"/>

    <TextView
            android:id="@+id/descTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/description_or_count_area"
            android:textColor="@color/triad3"
            app:layout_constraintBottom_toTopOf="@+id/descEditText"
            app:layout_constraintStart_toStartOf="parent"/>

    <EditText
            android:id="@+id/descEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="32dp"
            android:layout_marginRight="4dp"
            android:hint="@string/description_or_count_area"
            android:importantForAutofill="no"
            android:inputType="textAutoCorrect|textCapSentences|textAutoComplete"
            android:lines="1"
            android:maxLines="1"
            android:singleLine="true"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/headerLabelEditText"
            tools:layout_conversion_absoluteHeight="42dp"
            tools:layout_conversion_absoluteWidth="344dp"
            tools:layout_conversion_absoluteX="2dp"
            tools:layout_conversion_absoluteY="51dp"/>

    <TextView
            android:id="@+id/clientTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/client"
            android:textColor="@color/triad3"
            app:layout_constraintBottom_toTopOf="@+id/clientTextView"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:id="@+id/clientTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:dropDownHeight="200dp"
            android:freezesText="true"
            android:hint="@string/search_client"
            android:lines="1"
            android:maxLines="1"
            android:paddingStart="4dp"
            android:paddingTop="4dp"
            android:paddingEnd="4dp"
            android:paddingBottom="4dp"
            android:text=""
            android:visibility="visible"
            app:layout_constraintEnd_toStartOf="@+id/clientClearImageView"
            app:layout_constraintStart_toEndOf="@+id/clientSearchImageView"
            app:layout_constraintTop_toBottomOf="@+id/descEditText"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1"/>

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/clientSearchImageView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:alpha="0.5"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="@+id/clientTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/clientTextView"
            app:srcCompat="@drawable/ic_search_black" android:layout_marginStart="4dp"/>

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/clientClearImageView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginEnd="4dp"
            android:alpha="0.5"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="@+id/clientTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/clientTextView"
            app:srcCompat="@drawable/ic_close_black"/>

    <TextView
            android:id="@+id/orderRequestTypeTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/order_request_type"
            android:textColor="@color/triad3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/orderRequestTypeSpinnerFragment"/>

    <androidx.fragment.app.FragmentContainerView
            android:id="@+id/orderRequestTypeSpinnerFragment"
            android:name="com.dacosys.warehouseCounter.ui.fragments.orderRequest.OrderRequestTypeSpinnerFragment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout="@layout/fragment_spinner" app:layout_constraintTop_toBottomOf="@+id/clientTextView"
            android:layout_marginTop="32dp"/>
    <Button
            android:id="@+id/continueButton"
            style="?android:textAppearanceSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/rounded_corner_button_seagreen"
            android:text="@string/continue_"
            android:textColor="@color/text_light"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>


