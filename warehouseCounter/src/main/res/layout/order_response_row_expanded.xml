<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:id="@+id/parentLayout"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:background="@drawable/layout_border"
                                                   android:minHeight="0dp"
                                                   android:theme="@style/Theme.AppCompat.Light"
                                                   tools:layout_editor_absoluteX="0dp"
                                                   tools:layout_editor_absoluteY="81dp"
                                                   tools:visibility="visible" android:layout_marginTop="1dp"
                                                   android:layout_marginBottom="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/checkBoxConstraintLayout"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center_vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/generalDataConstraintLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/checkBoxConstraintLayout"
            app:layout_constraintTop_toTopOf="parent">

        <com.dacosys.warehouseCounter.ui.views.AutoResizeTextView
                android:id="@+id/descriptionTextView"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_weight="1"
                android:gravity="start"
                android:maxLines="1"
                android:minLines="1"
                android:text="@string/description"
                android:textSize="18sp"
                android:textStyle="bold"
                app:autoSizeMaxTextSize="18sp"
                app:autoSizeMinTextSize="12dp"
                app:autoSizeStepGranularity="1sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <View
                android:id="@+id/dividerInternal1"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/descriptionTextView"/>

        <com.dacosys.warehouseCounter.ui.views.AutoResizeTextView
                android:id="@+id/extIdTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_weight="1"
                android:gravity="start"
                android:maxLines="2"
                android:minLines="1"
                android:text="@string/external_id"
                android:textSize="14sp"
                app:autoSizeMaxTextSize="18sp"
                app:autoSizeMinTextSize="12dp"
                app:autoSizeStepGranularity="1sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dividerInternal1"/>

        <View
                android:id="@+id/dividerInternal2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/extIdTextView"/>

        <TextView
                android:id="@+id/creationDateLabelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="@string/creation_date"
                android:textColor="@color/darkslategray"
                android:textSize="8sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/creationDateTextView"
                app:layout_constraintTop_toBottomOf="@+id/dividerInternal2"/>

        <com.dacosys.warehouseCounter.ui.views.AutoResizeTextView
                android:id="@+id/creationDateTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:gravity="start"
                android:text="@string/creation_date"
                android:textSize="14sp"
                app:layout_constraintEnd_toStartOf="@+id/guideline500"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/creationDateLabelTextView"/>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="match_parent" android:id="@+id/finishPanel"
                app:layout_constraintStart_toStartOf="@+id/guideline500" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dividerInternal2">

            <View
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:background="?android:attr/listDivider"
                    android:id="@+id/dividerInternal3"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="4dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="4dp"/>
            <TextView
                    android:id="@+id/finishDateLabelTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/finish_date"
                    android:textColor="@color/darkslategray"
                    android:textSize="8sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/dividerInternal3" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="4dp" android:layout_marginTop="1dp"/>
            <CheckedTextView
                    android:id="@+id/finishDateTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:text="@string/finish_date"
                    android:textColor="?android:attr/textColorSecondary"
                    android:textSize="14sp"
                    app:layout_constraintStart_toEndOf="@+id/dividerInternal3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/finishDateLabelTextView" android:layout_marginTop="1dp"
                    android:layout_marginStart="4dp" android:layout_marginEnd="4dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline500"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
