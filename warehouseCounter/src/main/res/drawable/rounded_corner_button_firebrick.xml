<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#951d1d" />
            <stroke android:width="2dp" android:color="@color/firebrick" />
            <corners android:radius="6dp" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/dimgray" />

            <corners android:radius="6dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/firebrick" />

            <corners android:radius="6dp" />
        </shape>
    </item>
</selector>