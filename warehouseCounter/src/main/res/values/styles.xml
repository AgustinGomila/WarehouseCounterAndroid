<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.App" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
    </style>

    <style name="WarehouseCounterTheme" parent="Base.Theme.App">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/warehouseCounterDark</item>
        <item name="colorPrimaryVariant">@color/warehouseCounter</item>
        <item name="colorOnPrimary">@color/text_dark</item>
        <item name="colorSecondary">@color/triad3</item>
        <item name="colorSecondaryVariant">@color/triad2</item>
        <item name="colorOnSecondary">@color/text_dark</item>
        <!--To change the tint of checkboxes in options menu items</item>-->
        <item name="android:textColorSecondary">@color/triad4</item>
        <item name="android:statusBarColor">@color/triad3</item>
        <item name="android:navigationBarColor">@color/triad3</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--To change the background of options menu-->
        <item name="android:itemBackground">@color/warehouseCounterDark</item>
    </style>

    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="postSplashScreenTheme">@style/WarehouseCounterTheme</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_animated</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/warehouseCounter</item>
        <item name="windowSplashScreenBackground">@color/warehouseCounterDark</item>
        <item name="windowSplashScreenAnimationDuration">3000</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.AppCompat.Translucent" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/colorSemitransparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowNoTitle">true</item>
        <!-- <item name="android:windowIsFloating">true</item> -->
        <item name="android:backgroundDimEnabled">false</item>
        <item name="colorPrimary">@color/warehouseCounterDark</item>
        <item name="colorPrimaryVariant">@color/warehouseCounterDark</item>
        <item name="colorOnPrimary">@color/text_dark</item>
        <item name="colorSecondary">@color/triad3</item>
        <item name="colorSecondaryVariant">@color/triad2</item>
        <item name="colorOnSecondary">@color/text_dark</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

</resources>